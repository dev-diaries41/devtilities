{
  "compilerOptions": {
    "target": "es2022",
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "**/*.ts"],
  "exclude": ["dist", "node_modules", "src/api.ts", "src/file.ts"],
}
